<h1 class="mb-4">Editing Friend</h1>

<div class="card mb-4">
  <div class="card-header">
    <h2 class="card-title pt-2">Edit <%= @friend.first_name %> <%= @friend.last_name %></h2>
  </div>
  <div class="card-body">
    <%= render "form", friend: @friend %>
  </div>
  <div class="card-footer text-end">
    <%= link_to "Show this friend", @friend, class: "btn btn-info me-2" %>
    <%= link_to "Back to Friends", friends_path, class: "btn btn-secondary" %>
  </div>
</div>
